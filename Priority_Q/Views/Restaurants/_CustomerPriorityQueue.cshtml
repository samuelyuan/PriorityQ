@model IEnumerable<Priority_Q.Models.Customer>

<table class="table table-striped table-hover ">
    <!-- contents -->
    @{
        var counter = 0;
    }
    <tr>
        <td>
            <!-- Only display if groups are waiting in line -->
            @if (Model.Count() > 0)
            {
                <!-- green #1 means highest priority -->
                <span class="label label-success">#1</span>
                
                <!-- The contents of the line -->
                foreach (var item in Model)
                {
                    <span class="btn btn-primary disabled">
                        @item.GroupCapacity<span class="glyphicon glyphicon-user"></span> <br />
                        @item.Name
                    </span>
                    <span>
                        &emsp;
                    </span>
                    counter++;
                }
                
                <!-- red #xx means lowest priority -->
                <span class="label label-danger">#@counter</span>
            }
        </td>
    </tr>
</table>

