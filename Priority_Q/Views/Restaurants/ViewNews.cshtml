@model IEnumerable<Priority_Q.Models.NewsInfo>
@{
    ViewBag.Title = "View News";
}

<h2>Restaurant: @ViewBag.RestaurantName</h2>
<h3>News</h3>

<table class="table table-striped table-hover ">
    <!-- contents -->
    @{
        int counter = 1;
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <p>
                    #@Html.DisplayFor(modelItem => counter) <br />
                    @Html.DisplayFor(modelItem => item.Content) <br />
                    <i>Posted On @Html.DisplayFor(modelItem => item.Date)</i>

                   
                </p>
            </td>
            <td>
                @if (Request.IsAuthenticated && ViewBag.OwnsRestaurant)
                {
                    <br />
                    //edit
                    <a class="btn btn-warning" href='@string.Format("/NewsInfos/Edit/{0}", item.ID)' title="Edit">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    //delete
                    <a class="btn btn-danger" href='@string.Format("/NewsInfos/Delete/{0}", item.ID)' title="Delete">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 
                    </a>
                }
            </td>
        </tr>

        counter++;
    }
</table>



