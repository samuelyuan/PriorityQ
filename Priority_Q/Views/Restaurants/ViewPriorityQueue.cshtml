@model IEnumerable<Priority_Q.Models.Customer>

@{
    ViewBag.Title = "View Priority Queue";
}

<h2>Priority Queue</h2>
<h3>Restaurant: @ViewBag.RestaurantName</h3>
<p>
    @if (User.Identity.IsAuthenticated && ViewBag.OwnsRestaurant)
    {
        @Html.ActionLink("Add Customer", "Create", "Customers", new { id = ViewBag.RestaurantID }, null)
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupCapacity)
        </th>
        <th></th>
    </tr>

    <!-- table contents -->
    @{
        var counter = 1;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => counter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupCapacity)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated && ViewBag.OwnsRestaurant)
                { 
                    @Html.ActionLink("Remove", "Delete", "Customers", new { id = item.ID }, null)
                }
            </td>
        </tr>
        
        counter++;
    }

</table>


