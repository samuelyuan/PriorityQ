@model Priority_Q.Models.Restaurant

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Restaurant</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Restaurant</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover ">
                <tr>
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ID)
                    @Html.HiddenFor(model => model.UserID)

                    <td>
                        Name: 
                        <br />
                        @Html.EditorFor(model => model.Name)
                    </td>

                    <td>
                        Opening Hours:
                        <br />
                        <!-- fill in opening hours -->
                        @{
                            List<SelectListItem> listItems = new List<SelectListItem>();
                            for (var i = 0; i < 24; i++)
                            {
                                listItems.Add(new SelectListItem { Text = i.ToString().PadLeft(2, '0'), 
                                    Value = i.ToString().PadLeft(2, '0') });
                            }
                        }

                        @Html.DropDownListFor(model => model.OpeningHourStart, listItems, "-- Select Opening Hour --") : 00
                        @Html.DropDownListFor(model => model.OpeningHourEnd, listItems, "-- Select Closing Hour --") : 00
                    </td>

                    <td>
                        Address: 
                        <br />
                        @Html.EditorFor(model => model.StreetAddress)
                        @Html.ValidationMessageFor(model => model.StreetAddress)  
                        <br />
                        @Html.EditorFor(model => model.City)
                        @Html.ValidationMessageFor(model => model.City)
                        <br />
                        @Html.EditorFor(model => model.PhoneNumber)
                        @Html.ValidationMessageFor(model => model.PhoneNumber)    
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </td>
                </tr>
                
            </table>

</div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
