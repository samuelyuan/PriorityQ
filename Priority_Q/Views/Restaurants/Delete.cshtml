@using System.Globalization;

@model Priority_Q.Models.Restaurant

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this?
    <br />
    <span class="label label-danger">This can not be reversed and may have long lasting consequences!</span>
</h2> 

<div>
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">Restaurant</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover ">
                <tr>
                    <td>
                        <b>@Html.DisplayFor(model => model.Name)</b>
                    </td>
                    <td>
                        Opening Hours: <br />
                        <!-- add zero to single digit numbers (3 -> 03), but leave it alone if it's double digit-->
                        @Html.DisplayFor(model => model.OpeningHourStart):00
                        -
                        @Html.DisplayFor(model => model.OpeningHourEnd):00
                    </td>
                    <td>
                        Address:
                        <br />
                        @Html.DisplayFor(model => model.StreetAddress) <br />
                        @Html.DisplayFor(model => model.City) <br />
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </td>
                </tr>
            </table>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
