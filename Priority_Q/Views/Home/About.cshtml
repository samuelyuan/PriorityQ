@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title</h2>
<hr />
<h3>@ViewBag.Message</h3>


<div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-question-sign"></span>
            Problem
        </h3>
    </div>
    <div class="panel-body">
        When going out to restaurants, you never know how long you have to wait.
    </div>
</div>


<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-ok-sign"></span>
            Solution
        </h3>
    </div>
    <div class="panel-body">
        <p>
            Cooperation between the customers and the restaurant
        </p>

        <p>
            <div class="panel panel-info col-md-6">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-cutlery"></span>
                        Restaurant
                    </h3>
                </div>
                <div class="panel-body">
                    <ul>
                        <li>Update the status of tables</li>
                        <li>Add customers to a priority queue</li>
                    </ul>
                </div>
            </div>
            <div class="panel panel-info col-md-6">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-user"></span>
                        Customer
                    </h3>
                </div>
                <div class="panel-body">
                    <ul>
                        <li>
                            <span class=" glyphicon glyphicon-stats"></span>
                             Check how many people are waiting</li>
                    </ul>
                </div>
            </div>
        </p>
    </div>
</div>

    
